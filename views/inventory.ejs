<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Inventory</title>
  <style>
    body {
      font-family: 'Segoe UI', Arial, sans-serif;
      background: linear-gradient(135deg, #fdfbfb, #ebedee);
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: flex-start;
      min-height: 100vh;
    }
    .container {
      max-width: 900px;
      width: 100%;
      background: #fff;
      padding: 30px;
      margin-top: 40px;
      border-radius: 12px;
      box-shadow: 0 6px 20px rgba(0,0,0,0.1);
      text-align: center;
    }
    h1 {
      color: #2c3e50;
      margin-bottom: 15px;
      display: inline-block;
    }
    .btn-new {
      background: #27ae60;
      color: #fff;
      padding: 8px 14px;
      border-radius: 6px;
      font-size: 14px;
      margin-left: 15px;
      text-decoration: none;
      transition: background 0.3s ease;
    }
    .btn-new:hover {
      background: #219150;
    }
    .filter-bar {
      margin: 20px 0;
    }
    .filter-btn {
      background: #3498db;
      color: #fff;
      padding: 8px 14px;
      border-radius: 6px;
      font-size: 14px;
      margin: 0 5px;
      text-decoration: none;
      transition: background 0.3s ease;
    }
    .filter-btn:hover {
      background: #2980b9;
    }
    .item-card {
      background: #fdfdfd;
      border: 1px solid #ddd;
      border-radius: 10px;
      padding: 20px;
      margin: 15px auto;
      text-align: left;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
      transition: all 0.3s ease;
    }
    .item-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 6px 15px rgba(0,0,0,0.15);
    }
    .item-card p {
      margin: 8px 0;
      color: #34495e;
    }
    .item-card strong {
      color: #27ae60;
    }
    .card-actions {
      margin-top: 15px;
    }
    .btn {
      display: inline-block;
      padding: 8px 14px;
      margin-right: 10px;
      border-radius: 6px;
      font-size: 14px;
      cursor: pointer;
      text-decoration: none;
      transition: background 0.3s ease;
    }
    .btn-edit {
      background: #3498db;
      color: #fff;
    }
    .btn-edit:hover {
      background: #2980b9;
    }
    .btn-view {
      background: #8e44ad;
      color: #fff;
    }
    .btn-view:hover {
      background: #732d91;
    }
    .btn-delete {
      background: #e74c3c;
      color: #fff;
      border: none;
    }
    .btn-delete:hover {
      background: #c0392b;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>üì¶ Inventory</h1>
    <a href="/inventory/create" class="btn-new">‚ûï Add Item</a>

    <!-- Filter Bar -->
    <div class="filter-bar">
      <a href="/inventory" class="filter-btn">All</a>
      <a href="/inventory?menuYN=true" class="filter-btn">In Menu</a>
      <a href="/inventory?menuYN=false" class="filter-btn">Not in Menu</a>
    </div>

    <% inventory.forEach(item => { %>
      <div class="item-card">
        <p><strong>Item:</strong> <%= item.item %></p>
        <p><strong>Category:</strong> <%= item.category %></p>
        <p><strong>Quantity:</strong> <%= item.quantity %></p>
        <p><strong>Unit:</strong> <%= item.unit %></p>
        <p><strong>In Menu:</strong> <%= item.menuYN ? 'Yes' : 'No' %></p>

        <div class="card-actions">
          <a href="/inventory/<%= item._id %>/edit" class="btn btn-edit">‚úèÔ∏è Edit</a>
          <form action="/inventory/<%= item._id %>/delete" method="post" style="display:inline;">
            <button type="submit" class="btn btn-delete">‚úñ Delete</button>
          </form>
        </div>
      </div>
    <% }); %>
  </div>
</body>
</html>