<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Order</title>
</head>
<body>
    <form action="/order/create" method="post">
        <label for="dishes">Dishes</label>
        <select name="dishes" id="dishes" multiple>
        <% recipes.forEach(recipe => { %>
            <option value="<%= recipe._id %>"><%= recipe.recipeName %> <%= recipe.price %></option>
        <% }); %>
        </select>
        <br>
        <br>
        <label for="orderType">Order Type: </label>
        <input type="radio" name="orderType" value="takeAway">
        <label for="takeAway">Take Away</label>
        <input type="radio" name="orderType" value="delivery">
        <label for="delivery">Delivery</label>
        <input type="radio" name="orderType" value="dineIn">
        <label for="dineIn">Dine In</label>
        <br>
        <br>
        <label for="totalPrice">Total Price: </label>
        <input type="text" name="totalPrice" id="totalPrice">
        <input type="hidden" name="servedBy" value="6978f22d43d555270cfc3312">
        <button type="submit">Add Order</button>
    </form>
</body>
</html>