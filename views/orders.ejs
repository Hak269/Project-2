<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Orders</title>
  <style>
    body {
      font-family: 'Segoe UI', Arial, sans-serif;
      background: linear-gradient(135deg, #fdfbfb, #ebedee);
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: flex-start;
      min-height: 100vh;
    }
    .container {
      max-width: 900px;
      width: 100%;
      background: #fff;
      padding: 30px;
      margin-top: 40px;
      border-radius: 12px;
      box-shadow: 0 6px 20px rgba(0,0,0,0.1);
      text-align: center;
    }
    h1 {
      color: #2c3e50;
      margin-bottom: 15px;
      display: inline-block;
    }
    .btn-new {
      background: #27ae60;
      color: #fff;
      padding: 8px 14px;
      border-radius: 6px;
      font-size: 14px;
      margin-left: 15px;
      text-decoration: none;
      transition: background 0.3s ease;
    }
    .btn-new:hover {
      background: #219150;
    }
    .filter-bar {
      margin: 20px 0;
    }
    .filter-btn {
      background: #3498db;
      color: #fff;
      padding: 8px 14px;
      border-radius: 6px;
      font-size: 14px;
      margin: 0 5px;
      text-decoration: none;
      transition: background 0.3s ease;
    }
    .filter-btn:hover {
      background: #2980b9;
    }
    .order-card {
      background: #fdfdfd;
      border: 1px solid #ddd;
      border-radius: 10px;
      padding: 20px;
      margin: 15px auto;
      text-align: left;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
      transition: all 0.3s ease;
    }
    .order-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 6px 15px rgba(0,0,0,0.15);
    }
    .order-card p {
      margin: 8px 0;
      color: #34495e;
    }
    .order-card strong {
      color: #27ae60;
    }
    .card-actions {
      margin-top: 15px;
    }
    .btn {
      display: inline-block;
      padding: 8px 14px;
      margin-right: 10px;
      border-radius: 6px;
      font-size: 14px;
      cursor: pointer;
      text-decoration: none;
      transition: background 0.3s ease;
    }
    .btn-details {
      background: #3498db;
      color: #fff;
    }
    .btn-details:hover {
      background: #2980b9;
    }
    .btn-delete {
      background: #e74c3c;
      color: #fff;
    }
    .btn-delete:hover {
      background: #c0392b;
    }
    .btn-complete {
      background: #27ae60;
      color: #fff;
    }
    .btn-complete:hover {
      background: #219150;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>üì¶ Orders</h1>
    <a href="/order/create" class="btn-new">‚ûï New Order</a>

    <!-- Filter Bar -->
    <div class="filter-bar">
      <a href="/order" class="filter-btn">All</a>
      <a href="/order?status=Pending" class="filter-btn">Pending</a>
      <a href="/order?status=Completed" class="filter-btn">Completed</a>
    </div>

    <% allOrders.forEach(order => { %>
      <div class="order-card">
        <p><strong>Dishes:</strong><br>
          <% order.dishes.forEach(dish => { %>
            <span><%= dish.dish.recipeName %> x <%= dish.quantity %></span><br>
          <% }) %>
        </p>
        <p><strong>Total Price:</strong> $<%= order.totalPrice.toFixed(2) %></p>
        <p><strong>Order Type:</strong> <%= order.orderType %></p>
        <p><strong>Served By:</strong> <%= order.servedBy.username %></p>
        <p><strong>Status:</strong> <%= order.status %></p>

        <div class="card-actions">
          <a href="/order/<%= order._id %>" class="btn btn-details">üîç View Details</a>
          <% if (order.status !== "Completed") { %>
            <form action="/order/<%= order._id %>/delete" method="post" style="display:inline;">
              <button type="submit" class="btn btn-delete">‚úñ Delete Order</button>
            </form>
            <form action="/order/<%= order._id %>/complete" method="post" style="display:inline;">
              <button type="submit" class="btn btn-complete">‚úÖ Mark as Complete</button>
            </form>
          <% } else { %>
            <span style="color: #27ae60; font-weight: bold;">‚úî Completed</span>
          <% } %>
        </div>
      </div>
    <% }); %>
  </div>
</body>
</html>